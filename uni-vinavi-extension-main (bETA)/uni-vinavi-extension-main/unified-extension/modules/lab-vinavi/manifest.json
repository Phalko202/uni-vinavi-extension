{
  "manifest_version": 3,
  "name": "HMH Vinavi Lab Integration",
  "version": "1.2.0",
  "description": "Integrate HMH Laboratory Test Catalog with Vinavi Portal for seamless lab ordering",
  "permissions": [
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://auth.aasandha.mv/*",
    "https://vinavi.aasandha.mv/*",
    "https://*.aasandha.mv/*"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "Open HMH Lab Dashboard",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://vinavi.aasandha.mv/*"],
      "js": ["scripts/fullscreen-catalog.js", "content.js"],
      "css": ["content.css"]
    }
  ]
}
