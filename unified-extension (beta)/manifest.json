{
  "manifest_version": 3,
  "name": "Uni-Assister for Vinavi",
  "version": "2.0.0",
  "description": "All-in-one: Lab Extractor (HMH) + Vinavi Dashboard + QuickText + Save Files",
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://identitytoolkit.googleapis.com/*",
    "https://securetoken.googleapis.com/*",
    "https://*.firebaseio.com/*",
    "https://auth.aasandha.mv/*",
    "https://vinavi.aasandha.mv/*",
    "https://*.aasandha.mv/*",
    "https://dharaka.hmh.mv/*",
    "http://dharaka.hmh.mv/*",
    "*://dharaka.hmh.mv/*"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "Vinavi & HMH Universal Extension",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://vinavi.aasandha.mv/*", "https://auth.aasandha.mv/*", "https://*.aasandha.mv/*"],
      "js": ["modules/quicktext/builtin-templates.js", "modules/quicktext/content.js"],
      "css": ["modules/quicktext/styles.css"],
      "run_at": "document_end",
      "all_frames": false
    },
    {
      "matches": ["https://vinavi.aasandha.mv/*"],
      "js": ["modules/lab-vinavi/scripts/fullscreen-catalog.js", "modules/lab-vinavi/content.js"],
      "css": ["modules/lab-vinavi/content.css"],
      "run_at": "document_end",
      "all_frames": false
    },
    {
      "matches": ["https://dharaka.hmh.mv/*", "http://dharaka.hmh.mv/*", "*://dharaka.hmh.mv/*"],
      "js": ["modules/lab-extractor/widget.js"],
      "run_at": "document_end",
      "all_frames": false
    }
  ]
}
